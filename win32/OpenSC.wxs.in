             Comments="@OPENSC_VS_FF_COMMENTS@"
             Manufacturer="@OPENSC_VS_FF_COMPANY_NAME@"
             InstallerVersion="300"
             Languages="1033"
             Compressed="yes"
             SummaryCodepage="1252"
             InstallScope="perMachine"/>
